{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "pretty": true
  },
  "include": ["src/**/*"]
}
